<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/login_back">

    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_value_dp80"
        android:paddingBottom="@dimen/dimen_value_dp10"
        android:paddingTop="@dimen/dimen_value_dp10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_value_dp50">
        <TextView
            android:id="@+id/login_phone"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_value_dp20"
            android:paddingRight="@dimen/dimen_value_dp20"
            android:textSize="@dimen/dimen_value_sp12"
            android:textColor="@color/black"
            android:text="@string/main_personal_phone"/>
        <EditText
            android:id="@+id/login_phone_et"
            android:layout_toRightOf="@+id/login_phone"
            android:layout_marginLeft="@dimen/dimen_value_dp20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"/>
        <View
            android:layout_toRightOf="@+id/login_phone"
            android:layout_width="@dimen/dimen_value_dp1"
            android:layout_height="match_parent"
            android:background="@color/gray"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_value_dp1"
        android:background="@color/gray"/>

    <RelativeLayout
        android:background="@color/white"
        android:paddingBottom="@dimen/dimen_value_dp10"
        android:paddingTop="@dimen/dimen_value_dp10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_value_dp50">
        <TextView
            android:id="@+id/login_code"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_value_dp20"
            android:paddingRight="@dimen/dimen_value_dp20"
            android:textSize="@dimen/dimen_value_sp12"
            android:textColor="@color/black"
            android:text="@string/main_personal_code"/>
        <EditText
            android:id="@+id/login_code_et"
            android:layout_toRightOf="@+id/login_code"
            android:layout_marginLeft="@dimen/dimen_value_dp20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"/>
        <View
            android:layout_toRightOf="@+id/login_code"
            android:layout_width="@dimen/dimen_value_dp1"
            android:layout_height="match_parent"
            android:background="@color/gray"/>
    </RelativeLayout>

    <Button
        android:id="@+id/login_bt"
        android:layout_marginTop="@dimen/dimen_value_dp45"
        android:layout_marginLeft="@dimen/dimen_value_dp30"
        android:layout_marginRight="@dimen/dimen_value_dp30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_value_dp45"
        android:background="@color/tarmac"
        android:textColor="@color/white"
        android:text="@string/main_personal_login"/>

</LinearLayout>